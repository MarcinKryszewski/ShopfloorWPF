        </Style.Triggers>
    </Style>

    <Style x:Key="gridRemoveButton" BasedOn="{StaticResource gridEditButton}" TargetType="Button">
        <Setter Property="Background" Value="#D32F2F" />
        <Setter Property="BorderBrush" Value="#B71C1C" />
        <Style.Triggers>
