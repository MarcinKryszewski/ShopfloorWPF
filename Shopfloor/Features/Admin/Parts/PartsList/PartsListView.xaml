<UserControl x:Class="Shopfloor.Features.Admin.Parts.List.PartsListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Shopfloor.Features.Admin.Parts.List"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0"
            Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0"
                Margin="0,0,0,10"
                Foreground="{StaticResource ResourceKey=BrushPurple400}"
                Text="Dostawcy" />
            <ListView x:Name="PartsList"
                Grid.Row="1"
                MinHeight="274"
                ItemsSource="{Binding Path=Parts}"
                SelectedItem="{Binding Path=SelectedPart, Mode=TwoWay}"
                SelectionMode="Single">

                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="120"
                            DisplayMemberBinding="{Binding Path=NamePl}"
                            Header="Nazwa" />
                        <GridViewColumn Width="120"
                            DisplayMemberBinding="{Binding Path=NameEng}"
                            Header="Nazwa" />
                        <GridViewColumn Width="120"
                            DisplayMemberBinding="{Binding Path=Type.Name}"
                            Header="Nazwa" />
                        <GridViewColumn Width="120"
                            DisplayMemberBinding="{Binding Path=Index}"
                            Header="Nazwa" />
                        <GridViewColumn Width="120"
                            DisplayMemberBinding="{Binding Path=Number}"
                            Header="Nazwa" />
                        <GridViewColumn Width="120"
                            DisplayMemberBinding="{Binding Path=Details}"
                            Header="Nazwa" />
                        <GridViewColumn Width="120"
                            DisplayMemberBinding="{Binding Path=Producer.Name}"
                            Header="Nazwa" />
                        <GridViewColumn Width="120"
                            DisplayMemberBinding="{Binding Path=Producer.Name}"
                            Header="Nazwa" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        <Grid Grid.Column="1"
            Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Background="{StaticResource ResourceKey=BrushDarkNeutral400}"
                CornerRadius="10">
                <StackPanel>
                    <TextBlock Margin="0,0,0,10"
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource ResourceKey=BrushPurple400}"
                        Text="Formularz" />
                    <StackPanel Grid.Column="1"
                        MinWidth="150"
                        Margin="20,0,10,0"
                        Orientation="Vertical">

                        <TextBlock Foreground="{StaticResource ResourceKey=BrushPurple400}"
                            Text="Nazwa części PL" />
                        <TextBox Grid.Row="1"
                            Height="28"
                            Margin="0,0,0,20"
                            Style="{StaticResource ResourceKey=TextBoxMain}"
                            Text="{Binding Path=NamePl}" />

                        <TextBlock Foreground="{StaticResource ResourceKey=BrushPurple400}"
                            Text="Nazwa oryginalna" />
                        <TextBox Grid.Row="1"
                            Height="28"
                            Margin="0,0,0,20"
                            Style="{StaticResource ResourceKey=TextBoxMain}"
                            Text="{Binding Path=NameOriginal}" />

                        <!--TODO: Change to combobox-->
                        <TextBlock Foreground="{StaticResource ResourceKey=BrushPurple400}"
                            Text="Rodzaj części" />
                        <TextBox Grid.Row="1"
                            Height="28"
                            Margin="0,0,0,20"
                            Style="{StaticResource ResourceKey=TextBoxMain}"
                            Text="{Binding Path=Type}" />

                        <TextBlock Foreground="{StaticResource ResourceKey=BrushPurple400}"
                            Text="Indeks SAP" />
                        <TextBox Grid.Row="1"
                            Height="28"
                            Margin="0,0,0,20"
                            Style="{StaticResource ResourceKey=TextBoxMain}"
                            Text="{Binding Path=Index}" />

                        <TextBlock Foreground="{StaticResource ResourceKey=BrushPurple400}"
                            Text="Numer części" />
                        <TextBox Grid.Row="1"
                            Height="28"
                            Margin="0,0,0,20"
                            Style="{StaticResource ResourceKey=TextBoxMain}"
                            Text="{Binding Path=Number}" />

                        <TextBlock Foreground="{StaticResource ResourceKey=BrushPurple400}"
                            Text="Szczegóły" />
                        <TextBox Grid.Row="1"
                            Height="28"
                            Margin="0,0,0,20"
                            Style="{StaticResource ResourceKey=TextBoxMain}"
                            Text="{Binding Path=Details}" />

                        <!--TODO: Change to combobox-->
                        <TextBlock Foreground="{StaticResource ResourceKey=BrushPurple400}"
                            Text="Producent" />
                        <TextBox Grid.Row="1"
                            Height="28"
                            Margin="0,0,0,20"
                            Style="{StaticResource ResourceKey=TextBoxMain}"
                            Text="{Binding Path=Producer}" />

                        <!--TODO: Change to combobox-->
                        <TextBlock Foreground="{StaticResource ResourceKey=BrushPurple400}"
                            Text="Dostawca" />
                        <TextBox Grid.Row="1"
                            Height="28"
                            Margin="0,0,0,20"
                            Style="{StaticResource ResourceKey=TextBoxMain}"
                            Text="{Binding Path=Supplier}" />

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Button Grid.Row="0"
                                Grid.Column="1"
                                Width="100"
                                Height="40"
                                Margin="5">
                                <Button.Style>
                                    <Style BasedOn="{StaticResource ResourceKey=ButtonMain}"
                                        TargetType="Button">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=IsEdit}"
                                                Value="True">
                                                <Setter Property="Content"
                                                    Value="EDYTUJ" />
                                                <Setter Property="Command"
                                                    Value="{Binding Path=PartEditCommand}" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Path=IsEdit}"
                                                Value="False">
                                                <Setter Property="Content"
                                                    Value="STWÓRZ" />
                                                <Setter Property="Command"
                                                    Value="{Binding Path=PartAddCommand}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Grid.Row="0"
                                Grid.Column="2"
                                Width="100"
                                Height="40"
                                Margin="10"
                                Command="{Binding Path=CleanFormCommand}"
                                Content="ANULUJ"
                                Style="{StaticResource ResourceKey=ButtonSide}" />
                            <TextBlock Grid.Row="1"
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                MaxWidth="260"
                                Margin="0,0,0,10"
                                Style="{StaticResource ResourceKey=ErrorTextBlock}"
                                Text="{Binding Path=ErrorMassage}"
                                Visibility="{Binding Path=HasErrorVisibility}" />
                        </Grid>

                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>