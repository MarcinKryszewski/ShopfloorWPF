<UserControl
    x:Class="Shopfloor.Features.Admin.Suppliers.SuppliersMainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:list="clr-namespace:Shopfloor.Features.Admin.Suppliers.List"
    xmlns:local="clr-namespace:Shopfloor.Features.Admin.Suppliers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:SuppliersMainViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="30">
        <ContentControl Content="{Binding Path=Content}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type list:SuppliersListViewModel}">
                    <list:SuppliersListView />
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</UserControl> 