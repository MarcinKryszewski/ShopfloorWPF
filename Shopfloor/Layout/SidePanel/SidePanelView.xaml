<UserControl
    x:Class="Shopfloor.Layout.SidePanel.SidePanelView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Shopfloor.Layout.SidePanel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Height="1020"
    d:Width="240"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="64" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="BlueViolet">
            <Border Margin="20,0,20,0" Background="Aqua" />
        </Border>
        <Border Grid.Row="1" Background="Gainsboro" />
    </Grid>
</UserControl>
