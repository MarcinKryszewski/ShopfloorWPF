<UserControl  x:Class="Shopfloor.Layout.TopPanel.TopPanelView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:local="clr-namespace:Shopfloor.Layout.TopPanel" 
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Height="64" d:DataContext="{d:DesignInstance Type=local:TopPanelViewModel}" d:Width="1680" mc:Ignorable="d">
	<Border Background="Yellow">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="auto" />
			</Grid.ColumnDefinitions>
			<Border CornerRadius="25" Width="50" Grid.Column="1" Margin="10">
				<Border.Background>
					<ImageBrush Stretch="Fill" ImageSource="{Binding Path=UserImagePath}" ></ImageBrush>
				</Border.Background>
				<Border.ContextMenu>
					<ContextMenu>
						<MenuItem Header="Menu item 1"/>
						<MenuItem Header="Menu item 2" />
						<Separator />
						<MenuItem Header="Menu item 3" />
					</ContextMenu>
				</Border.ContextMenu>
			</Border>
		</Grid>
	</Border>
</UserControl>